@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - DeMozz</title>
    <link rel="icon" href="~/lib/images/favicon.png">
    <link rel="stylesheet" href="~/css/StyleSheetBoom.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DeMozzWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
</head>


 <body> 
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark py-1 bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="/lib/images/logo_transparent.png" style="width:46px"/>
                    DeMozz</a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-page="/Index">Home
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/CVs/Index">Resumes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                            
                        </ul>
                        <ul class="navbar-nav d-flex justify-content-end">
                            <li class="nav-item">
                                <a class="btn btn-danger" asp-area="" asp-page="/Logout">Logout</a>
                            </li>
                         </ul>
                     }
                     else
                     {
                         <ul class="navbar-nav d-flex justify-content-end flex-grow-1">
                             <li class="nav-item me-2">
                                <a asp-page="/Login" class="btn btn-info"><i class="bi bi-box-arrow-in-right"></i> &nbsp;Login</a>
                             </li>
                             <li class="nav-item">
                                <a asp-page="/Register" class="btn btn-primary">Register</a>
                             </li>
                         </ul>
                     }
                     
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3" style="margin-top:60px">
            <partial name="_notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3" style="position:absolute;bottom:0">
        
        <div class="container">
            &copy; 2022 - DeMozz 
        </div>
    </footer>
    
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>