@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var username =" " + User.Identity.Name;
}

<div class="container">
    <h1 class="display-4" style="text-align:center">Welcome @username</h1>

   
    <div class="row" style="margin-top:30px">

        <div class="col-6 align-items-center justify-content-center" style="margin-top:5%">
            
            <h2>Share your resume with us</h2>
            <a asp-page="/CVs/Add" class="btn btn-primary">
                    <i class="bi bi-send"></i> &nbsp;Send your Resume
            </a>
        </div>
        <div class="col-6"><img src="/lib/images/wr-resumes-logo.png" style="float:right;width:50%"/></div>
    </div>
   
</div>

<img src="/lib/images/bg-mid.png" style="width:100%;height:380px;margin-top:40px">
